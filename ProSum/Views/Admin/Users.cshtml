@model List<User>;
@{
    ViewData["Title"] = "Gebruikers";
}
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
        <table class="table text-white bg-dark">
            <thead>
                <tr>
                    <th>Voornaam</th>
                    <th>Achternaam</th>
                    <th>Email</th>
                    <th>Afdeling</th>
                    <th>Admin</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (User user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Department</td>
                        <td>
                            @if (user.Role.Name == RolesEnum.Admin.ToString())
                            {
                                <i class="fas fa-check"></i> 
                            }
                            else
                            {
                                <i class="fas fa-times"></i>
                            }
                        </td>
                        <td>
                            <a asp-controller="Admin" asp-action="EditUser" asp-route-userId="@user.Id" class="far fa-edit"></a>
                        </td>
                        <td>
                            <a asp-controller="Admin" asp-action="DeleteUser" asp-route-userId="@user.Id" class="far fa-trash-alt"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

