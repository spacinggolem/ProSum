@using ProSum.Models.ViewModels;
@model CreateClientViewModel;
@{
    ViewData["Title"] = "Create";
}

<h1>Nieuwe Klant</h1>

<div class="body-content">
    <form asp-action="Create" asp-controller="Client">
        <div class="form-group">
            <span asp-validation-for="@Model.Name" class="text-danger"></span> <br />
            <label asp-for="@Model.Name" class="control-label">Naam: </label>
            <input type="text" asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.Email" class="text-danger"></span> <br />
            <label asp-for="@Model.Email" class="control-label">Email: </label>
            <input type="text" asp-for="@Model.Email" class="form-control" />
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.Company" class="text-danger"></span> <br />
            <label asp-for="@Model.Company" class="control-label">Bedrijf: </label>
            <input type="text" asp-for="@Model.Company" class="form-control" />
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span> <br />
            <label asp-for="@Model.PhoneNumber" class="control-label">Telefoon (bv. 31612345678): </label>
            <input type="text" asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
</form>
</div>