
@{
    ViewData["Title"] = "Edit Client";

}

@using ProSum.Models.ViewModels
@model EditClientViewModel
<form asp-action="Edit">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name" class="control-label">Name: </label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email" class="control-label">Email: </label>
        <input type="email" asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Company" class="control-label">Company: </label>
        <input type="text" asp-for="@Model.Company" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Phonenumber" class="control-label">Phonenumber: </label>
        <input type="text" asp-for="@Model.Phonenumber" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>
