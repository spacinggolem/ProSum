@model ProSum.Models.ViewModels.CreateAnnouncementViewModel
@{
    ViewData["Title"] = "AddAnnouncement";
}

<div class="body-content">
    <form asp-action="AddAnnouncement" asp-controller="Project">
        <div class="form-group">
            <span asp-validation-for="@Model.Title" class="text-danger"></span> <br />
            <label asp-for="@Model.Title" class="control-label">Titel: </label>
            <input type="text" asp-for="@Model.Title" class="form-control" />
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.Message" class="text-danger"></span> <br />
            <label asp-for="@Model.Message" class="control-label">Bericht: </label>
            <input type="text" asp-for="@Model.Message" class="form-control" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.ProjectId" value="@Model.ProjectId" />
            <input type="submit" value="Voeg toe" class="btn btn-success" />
        </div>
    </form>
</div>