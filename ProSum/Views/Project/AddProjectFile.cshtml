@model ProSum.Models.ViewModels.CreateFileViewModel
@{
    ViewData["Title"] = "AddProjectFile";
}

<div class="body-content">
    <form asp-action="AddProjectFile" asp-controller="Project">
        <div class="form-group">
            <span asp-validation-for="@Model.Title" class="text-danger"></span> <br />
            <label asp-for="@Model.Title" class="control-label">Titel: </label>
            <input type="text" asp-for="@Model.Title" class="form-control" />
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.Link" class="text-danger"></span> <br />
            <label asp-for="@Model.Link" class="control-label">Link: </label>
            <input type="text" asp-for="@Model.Link" class="form-control" />
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.Department" class="text-danger"></span> <br />
            <label asp-for="@Model.Department" class="control-label">Department: </label>
            <select class="form-control" asp-for="@Model.Department" asp-items="@Html.GetEnumSelectList(typeof(DepartmentEnum))"></select>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.ProjectId" value="@Model.ProjectId" />
        </div>
        <button type="submit" class="btn btn-success">Add file!</button>
    </form>
</div>